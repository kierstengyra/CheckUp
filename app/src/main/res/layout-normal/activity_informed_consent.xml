<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtInformedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0B5D51"
        android:padding="15dp"
        android:text="Pagbigay ng Pahintulot"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtAkoSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="122dp"
        android:padding="10dp"
        android:text="Ako, si"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtClause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:padding="10dp"
        android:text="ay binibigay ang aking pahintulot na makibahagi sa programang ito na naglalayon na tulungan ang kalusugang pangkaisipan ng aking anak. Buong kaalaman kong binibigyan ng pahintulot ang guidance counselor ng eskwelahan na ito na aralin ang aking mga sagot upang makatulong sa aking anak."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="189dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/txtAkoSi"
        android:layout_alignParentStart="false"
        android:layout_marginStart="181dp"
        android:layout_marginTop="-15dp"
        android:ems="10"
        android:hint="Pangalan"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editName2"
        android:layout_width="176dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="155dp"
        android:ems="10"
        android:hint="Pangalan"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <com.thsst2.activities.DrawingView
        android:id="@+id/drawing"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="235dp"
        android:layout_weight="1"
        android:background="#DDDDDD" />

    <Button
        android:id="@+id/btnSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#0B5D51"
        android:onClick="signed"
        android:text="OK"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

</RelativeLayout>