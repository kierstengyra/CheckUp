<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeScreen">

    <TextView
        android:id="@+id/txtEnterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="151dp"
        android:text="Enter password to proceed"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#5D4F42"
        android:textIsSelectable="true"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#179E9A"
        android:onClick="verifyPassword"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Go"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:typeface="normal" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEnterPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="20sp"
        android:typeface="normal" />

</RelativeLayout>
